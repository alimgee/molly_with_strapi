      "default": true
    },
    "summary": {
      "type": "text",
      "maxLength": 500
    },
    "readTime": {
      "type": "integer",
      "min": 1,
      "max": 60
    },
    "tags": {
      "type": "json"
    },
    "seoTitle": {
      "type": "string",
      "maxLength": 60
    },
    "seoDescription": {
      "type": "text",
      "maxLength": 160
