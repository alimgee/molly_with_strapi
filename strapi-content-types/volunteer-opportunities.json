{
  "kind": "collectionType",
  "collectionName": "volunteer_opportunities",
  "info": {
    "singularName": "volunteer-opportunity",
    "pluralName": "volunteer-opportunities",
    "displayName": "Volunteer Opportunities",
    "description": "Ways people can volunteer and help the foundation"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 300,
      "description": "Brief summary for listings"
    },
    "volunteerType": {
      "type": "enumeration",
      "enum": [
        "event-help",
        "administrative",
        "fundraising",
        "social-media",
        "content-creation",
        "technical-support",
        "family-support",
        "hospital-visits",
        "awareness-campaigns",
        "one-time-event",
        "ongoing-commitment",
        "other"
      ],
      "required": true
    },
    "timeCommitment": {
      "type": "enumeration",
      "enum": [
        "one-time",
        "weekly",
        "monthly",
        "seasonal",
        "as-needed",
        "flexible"
      ]
    },
    "location": {
      "type": "enumeration",
      "enum": [
        "remote",
        "dublin",
        "cork",
        "galway",
        "limerick",
        "waterford",
        "nationwide",
        "hospital-based",
        "community-events"
      ]
    },
    "skillsRequired": {
      "type": "json",
      "description": "Array of skills or qualifications needed"
    },
    "ageRequirement": {
      "type": "string",
      "description": "Age requirements for volunteers"
    },
    "training": {
      "type": "richtext",
      "description": "Training provided or required"
    },
    "benefits": {
      "type": "richtext",
      "description": "What volunteers gain from this opportunity"
    },
    "applicationProcess": {
      "type": "richtext",
      "description": "How to apply for this volunteer role"
    },
    "contactPerson": {
      "type": "string",
      "description": "Volunteer coordinator name"
    },
    "contactEmail": {
      "type": "email",
      "required": true
    },
    "contactPhone": {
      "type": "string"
    },
    "applicationUrl": {
      "type": "string",
      "description": "Link to volunteer application form"
    },
    "backgroundCheckRequired": {
      "type": "boolean",
      "default": false
    },
    "references": {
      "type": "boolean",
      "default": false,
      "description": "Whether references are required"
    },
    "availablePositions": {
      "type": "integer",
      "description": "Number of open volunteer positions"
    },
    "urgent": {
      "type": "boolean",
      "default": false,
      "description": "Whether this is an urgent volunteer need"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "order": {
      "type": "integer",
      "default": 0
    }
  }
}
