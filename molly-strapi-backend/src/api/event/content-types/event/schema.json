{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Events",
    "description": "Events for childhood cancer awareness, fundraising, and community support"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "eventType": {
      "type": "enumeration",
      "enum": ["fundraiser", "awareness", "support_group", "educational", "memorial", "community"],
      "required": true
    },
    "startDate": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime"
    },
    "location": {
      "type": "text"
    },
    "isVirtual": {
      "type": "boolean",
      "default": false
    },
    "virtualLink": {
      "type": "string"
    },
    "registrationRequired": {
      "type": "boolean",
      "default": false
    },
    "registrationLink": {
      "type": "string"
    },
    "contactEmail": {
      "type": "email"
    },
    "contactPhone": {
      "type": "string"
    },
    "maxAttendees": {
      "type": "integer"
    },
    "ticketPrice": {
      "type": "decimal"
    },
    "isFree": {
      "type": "boolean",
      "default": true
    },
    "featuredImage": {
      "type": "string"
    },
    "gallery": {
      "type": "json"
    },
    "organizer": {
      "type": "string"
    },
    "sponsors": {
      "type": "json"
    },
    "tags": {
      "type": "json"
    },
    "isRecurring": {
      "type": "boolean",
      "default": false
    },
    "recurrencePattern": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    }
  }
}
